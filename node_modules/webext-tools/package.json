{
	"name": "webext-tools",
	"version": "0.1.0",
	"description": "Utility functions for WebExtensions",
	"keywords": [
		"extension",
		"chrome",
		"firefox",
		"safari",
		"web",
		"extensions",
		"browser"
	],
	"repository": "fregante/webext-tools",
	"funding": "https://github.com/sponsors/fregante",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
